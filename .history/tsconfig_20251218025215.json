{
  "compilerOptions": {
    "target": "esnext",                 // نسخة الـ JavaScript اللي هيتم الترجمة ليها
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,                     // يسمح بملفات JS في المشروع
    "skipLibCheck": true,                // يتجاهل التحقق من مكتبات الطرف الثالث
    "strict": true,                      // شغّل جميع فحوصات TypeScript الصارمة
    "noImplicitAny": false,              // الحل المؤقت: يسمح للمتغيرات بدون Type
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "incremental": true
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
